{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "element1",
        "type": "Microsoft.Common.TextBox",
        "label": "Some text box",
        "defaultValue": "[concat('snowball', utcNow()]",
        "toolTip": "Halp!",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9A-Z]{1,30}$",
          "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
        },
        "visible": true
      }
    ],
    "steps": [
      {
        "name": "infrastructureConfig",
        "label": "Snowball definition",
        "subLabel": {
          "preValidation": "Configure Snowball infrastructure parameters",
          "postValidation": "Done"
        },
        "bladeTitle": "Snowball definition",
        "elements": [
          {
            "name": "adminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "defaultValue": "SnowballAdm",
            "constraints": {
              "required": true
            },
            "toolTip": "Provide admin username for Snowball VM.",
            "osPlatform": "Windows"
          },
          {
            "name": "adminPassword",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "password": "Enter password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": {
              "password": "Admin password for Snowball VM."
            },
            "osPlatform": "Windows"
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "defaultValue": {
              "type": "Standard_LRS"
            }
          },
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size",
            "toolTip": "The size of the virtual machine.",
            "recommendedSizes": [
              "Standard_D1",
              "Standard_D2",
              "Standard_D3"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4"
              ]
            },
            "osPlatform": "Windows",
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "2012-R2-Datacenter"
            }
          },
          {
            "name": "vnet",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Snowball network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "Virtual network where Snowball will live.",
              "subnets": "Subnets with servers."
            },
            "defaultValue": {
              "name": "SnowballVNet",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/16"
            },
            "options": {
              "hideExisting": true
            },
            "subnets": {
              "subnet": {
                "label": "Server subnet",
                "defaultValue": {
                  "name": "Servers",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/24",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": true
                }
              }
            },
            "visible": true
          },
          {
            "name": "dnsAndPublicIP",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "DNS Prefix"
            },
            "toolTip": {
              "domainNameLabel": "DNS Prefix for the VM public IP address."
            },
            "defaultValue": {
              "publicIpAddressName": "SnowballSmall"
            },
            "options": {
              "hideNone": true,
              "hideDomainNameLabel": false,
              "hideExisting": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "location": "[location()]",
      "adminUsername": "[basics('adminUsername')]",
      "adminPassword": "[basics('adminPassword')]",
      "StorageAccountName": "[steps('infrastructureConfig').storageAccount.name]",
      "storageAccountType": "[steps('infrastructureConfig').storageAccount.type]",
      "existingStorageAccountRG": "[steps('infrastructureConfig').storageAccount.resourceGroup]",
      "domainName": "[steps('infrastructureConfig').domainName]",
      "vmSize": "[steps('infrastructureConfig').vmSize]",
      "publicIPAddressName": "[steps('infrastructureConfig').dnsAndPublicIP.name]",
      "dnsNameForPublicIP": "[steps('infrastructureConfig').dnsAndPublicIP.domainNameLabel]",
      "existingIPRGName": "[steps('infrastructureConfig').dnsAndPublicIP.resourceGroup]",
      "publicIPNewOrExisting": "[steps('infrastructureConfig').dnsAndPublicIP.newOrExistingOrNone]"
    }
  }
}
